{
  "manifest_version": 3,
  "name": "FocusGuard",
  "version": "1.0",
  "description": "Track social media & study time and limit usage.",
  "permissions": ["storage", "tabs", "alarms"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
